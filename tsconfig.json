{
  "include": ["./src/"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "lib": ["es2017", "es7", "dom"],
    "types": [
      "webpack-env",
      "react-native",
      "node"
    ],
    "skipLibCheck": true
  },
  "typeRoots": [
    "@types",
    "./@types"
  ]
}
