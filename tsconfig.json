{
  "include": ["./src/"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "lib": ["es2017", "es7", "dom"],
    "types": [
      "webpack-env",
      "react-native",
      "node"
    ],
    "typeRoots": [
      "@types",
      "./@types"
    ],
    "skipLibCheck": true
  }
}
